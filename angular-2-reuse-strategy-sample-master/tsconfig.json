{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/unbundled",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": [
      "core-js",
      "node",
      "jasmine"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "e2e"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
